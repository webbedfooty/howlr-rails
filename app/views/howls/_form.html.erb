<%= form_for @howl do |h| %>


<% if h.object.errors.any?%>
  <div class="col xs12 s12">
    <% h.object.errors.full_messages.each do |x|%>
      <li>Error: <%= x %></li>
      <li>Howl was not heard :(</li>
    <% end %>
  </div>
  <% end %>

  <div class="input-field col xs12 sr12 m12">
    <div class="active">
      <%= h.label :message %>
    </div>
    <div class="validate">
      <%= h.text_field :message %>
    </div>
  </div>

  <div class="input-field col xs12 sr12 m12">
    <div class="active">
      <%= h.label :howl_image %>
    </div>
    <div class="validate">
      <%= h.text_field :howl_image %>
    </div>
  </div>


  <div class="input-field col xs12 sr12 m12">
    <div class="active">
      <%= h.label :wolf_id %>
    </div>
    <div class="validate">
      <%= h.text_field :wolf_id %>
    </div>
  </div>


  <div class="col sm12">
    <span class="waves-effect right waves-light newPackBtn btn  red darken-3">
      <%= h.submit %>
    </span>
  </div>
<% end %>
